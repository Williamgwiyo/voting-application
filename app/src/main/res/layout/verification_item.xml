<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="3dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/votersnames"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/userVerificationID"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/votersnames"
        app:layout_constraintStart_toStartOf="@+id/votersnames"
        app:layout_constraintTop_toBottomOf="@+id/votersnames"
        android:scaleType="centerCrop"
        android:src="@drawable/add_group" />

    <Button
        android:id="@+id/approvebtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Approve ID"
        app:layout_constraintEnd_toEndOf="@+id/userVerificationID"
        app:layout_constraintStart_toStartOf="@+id/userVerificationID"
        app:layout_constraintTop_toBottomOf="@+id/userVerificationID" />

</androidx.constraintlayout.widget.ConstraintLayout>